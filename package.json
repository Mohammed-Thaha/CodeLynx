{
  "name": "codelynx",
  "displayName": "CodeLynx - AI Code Assistant",
  "publisher": "Futuronix",
  "description": "AI-powered code review, explanation, and assistance. Chat with AI about your codebase.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "chat",
    "code-review",
    "code-explanation",
    "assistant",
    "cerebras"
  ],
  "activationEvents": [
    "onCommand:codelynx.openChat",
    "onCommand:codelynx.showApiUsage"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codelynx.openChat",
        "title": "CodeLynx: Open AI Chat"
      },
      {
        "command": "codelynx.showApiUsage",
        "title": "CodeLynx: Show API Usage Statistics"
      }
    ],
    "configuration": {
      "title": "CodeLynx",
      "properties": {
        "codelynx.cerebrasApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Cerebras API key** for AI-powered code assistance. [Get your free key here](https://inference.cerebras.ai/).",
          "order": 1
        },
        "codelynx.apiEndpoint": {
          "type": "string",
          "default": "https://api.cerebras.ai",
          "markdownDescription": "API endpoint for Cerebras AI service. Leave as default unless instructed by support.",
          "order": 2
        },
        "codelynx.chatModel": {
          "type": "string",
          "enum": [
            "gpt-oss-120b",
            "llama-3.3-70b",
            "llama-4-maverick-17b-128e-instruct",
            "llama-4-scout-17b-16e-instruct",
            "llama3.1-8b",
            "qwen-3-235b-a22b-instruct-2507",
            "qwen-3-235b-a22b-thinking-2507",
            "qwen-3-32b",
            "qwen-3-coder-480b"
          ],
          "default": "llama-3.3-70b",
          "markdownDescription": "Preferred AI model for chat and code assistance.",
          "order": 3
        },
        "codelynx.chatTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "markdownDescription": "Chat response creativity (0.0 = focused, 1.0 = creative)",
          "order": 4
        },
        "codelynx.apiDailyLimit": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "markdownDescription": "Maximum number of API requests allowed per day",
          "order": 5
        },
        "codelynx.hasShownWelcome": {
          "type": "boolean",
          "default": false,
          "description": "Whether the welcome message has been shown",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'ðŸ“¦ CodeLynx is ready for publishing'",
    "package": "vsce package"
  },
  "dependencies": {
    "@cerebras/cerebras_cloud_sdk": "^1.50.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammed-thaha/codelynx"
  },
  "license": "MIT"
}